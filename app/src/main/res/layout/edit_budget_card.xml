<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        >
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            card_view:cardCornerRadius="4dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <EditText
                    android:id="@+id/edit_budget_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Title"
                    />
            <EditText
                    android:id="@+id/edit_budget_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="The description goes here"
                    />
            <com.vi.swipenumberpicker.SwipeNumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:snp_numberColor="@color/primary_text"
                    app:snp_arrowColor="@color/primary_text"
                    app:snp_backgroundColor="@color/white"
                    app:snp_max="100"
                    app:snp_min="0"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>